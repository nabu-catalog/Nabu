
= paginate @files, :param_name => :files_page

%table.table
  %thead
    %tr
      = sortable :filename
      = sortable :mimetype, 'Type'
      = sortable :size, 'File size'
      = sortable :duration
      %th File access
  %tbody
    - if @files.count == 0
      %tr
        %td no files available
        %td
        %td
        %td
        %td
    - else
      - @files.each do |file|
        %tr
          %td= file.filename
          %td= file.mimetype
          %td= number_to_human_size file.size
          %td= number_to_human_duration file.duration
          %td= link_to 'View', [@collection, @item, file] if can? :read, file
      %tr
        %td
          %b== #{@files.count} files
        %td== --
        %td
          %b= number_to_human_size @files.sum(&:size)
        %td== --
        %td== --

= paginate @files, :param_name => :files_page

%p
  -['10','50',"all #{@num_files}"].each do |n|
    = link_to "Show #{n}", params.permit!.merge(files_per_page: n.sub('all ', ''), files_page: n.start_with?('all') ? 1 : params[:files_page]), class: 'button'

