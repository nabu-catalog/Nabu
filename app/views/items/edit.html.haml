
= form_for [@collection, @item], :method => :patch do |f|
  - if @item.errors.any?
    #error_explanation
      %h2== #{pluralize(@item.errors.count, 'error')} prohibited this post from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .right
    = f.submit 'Save item'

  = render :partial => 'form', :locals => {:f => f}

  .right
    = link_to 'Cancel', [@collection, @item], :class => 'button'
    = f.submit 'Save item'
